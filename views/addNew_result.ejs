<!DOCTYPE html>
<html>
<head>
  <title>Add New Result</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

<div class="container py-5">
  <h2 class="mb-4">Add New Polling Unit Result</h2>

  <% if (message) { %>
    <div class="alert alert-success"><%= message %></div>
  <% } %>

  <form method="POST" action="/addNew-result">
    <div class="mb-3">
      <label class="form-label">Polling Unit</label>
      <select class="form-select" name="polling_unit_id" required>
        <% pollingUnits.forEach(pu => { %>
          <option value="<%= pu.uniqueid %>"><%= pu.polling_unit_name %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Party</label>
      <select class="form-select" name="party_abbreviation" required>
        <% parties.forEach(p => { %>
          <option value="<%= p.partyid %>"><%= p.partyname %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Score</label>
      <input type="number" class="form-control" name="party_score" required>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/" class="btn btn-secondary">â¬… Back</a>
  </form>
</div>

</body>
</html>
